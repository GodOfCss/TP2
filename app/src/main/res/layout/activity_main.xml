<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/black"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.MainActivity">

    <TextView
        android:scaleX="2"
        android:scaleY="2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Atari GO!"
        android:textStyle="bold"
        android:textColor="@color/grey"
        android:layout_above="@id/logoMain"/>

    <ImageView
        android:id="@+id/logoMain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginVertical="30dp"
        android:scaleX="1.5"
        android:scaleY="1.5"
        android:src="@mipmap/gologo"
        app:cornerRadius="100dp" />
    <TextView
        android:scaleX="1.5"
        android:scaleY="1.5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/logoMain"
        android:text="Creation \n Jeremy Dostie \n Â©2023"
        android:textStyle="bold"
        android:textColor="@color/grey"
        android:textAlignment="center"
        android:id="@+id/creatorText"
        android:layout_marginVertical="30dp"
        />

    <Button
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/creatorText"
        android:text="New Game"
        android:id="@+id/playButton"
        android:layout_marginVertical="10dp"
        app:cornerRadius="0dp"
        android:backgroundTint="@color/blue"/>

    <Button
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/playButton"
        android:text="Replay"
        android:id="@+id/replayButton"
        android:layout_marginVertical="10dp"
        app:cornerRadius="0dp"
        android:backgroundTint="@color/blue"
        />



</RelativeLayout>